<h2 class="h3 mb-3 font-weight-normal" style="text-align: center; padding-top: 10px">Mude sua senha</h2>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%=f.error_notification%>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> MÃ­nimo de caracteres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"form-control" ,placeholder: "Nova senha" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" ,placeholder: "Confirmar senha nova" %>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="actions">
    <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
  </div>

  <hr>
  <%= render "devise/shared/links" %>
<% end %>