<h2 class="h3 mb-3 font-weight-normal" style="text-align: center; padding-top: 10px">Forgot your password?</h2>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%=f.error_notification%>
  <div class="field">
    <%= f.input :email, required: true, label: false,autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail" %>
  </div>
  <div class="actions" style= "padding-top: 10px">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block"%>
  </div>
    <hr>
  <%= render "devise/shared/links" %>
<% end %>