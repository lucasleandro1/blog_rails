<h2 class="h3 mb-3 font-weight-normal" style="text-align: center; padding-top: 10px">Editar</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%=f.error_notification%>

  <div class="field">
    <%= f.input :email, required: true, label: false, autofocus: true, autocomplete: "email",  class: "form-control", placeholder: "E-mail"%>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Aguardando confirmação para: <%= resource.unconfirmed_email %></div>
    <% end %>
    <p>(Deixe em branco se não quiser alterar)</p>
    <%= f.password_field :password, required: true, label: false, autocomplete: "new-password", class: "form-control", placeholder: "Senha" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> Mínimo de caracteres</em>
    <% end %>
    <%= f.password_field :password_confirmation, required: true, label: false,autocomplete: "new-password", class: "form-control", placeholder: "Confirmar senha"%>
    <p>(Precisamos da sua senha atual para confirmar suas alterações)</p>
    <%= f.password_field :current_password,  required: true, label: false, autocomplete: "current-password", class: "form-control", placeholder: "Senha atual" %>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="actions">
    <%= f.submit "Atualizar",class: "btn btn-primary btn-block" %>

<% end %>
      <h3>Cancelar minha conta</h3>
<div><%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete ,class: "btn btn-primary btn-block"%></div>

<%= link_to "Voltar", :back %>
  </div>


